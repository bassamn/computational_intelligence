def fitness(chromosome):
    fit = 0
    for item in chromosome:
        fit += abs(item)
    return fit
    
    
def wheel_selection(population):
probability = list()
probability.append(0)
sigma_fitness = 0

for chromosome in population:
    sigma_fitness += fitness(chromosome)

for i in range(1, len(population)+1):
    temp = fitness(population[i-1]) / sigma_fitness
    probability.append(temp + probability[i-1])

a = random.random()

selected = None
for j in range(len(probability)):
    if probability[j] < a < probability[j+1]:
        selected = population[j]
        break
print(probability)
print(a)
return selected
